{
  "name": "lingua-stagify",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "turbo dev --filter=frontend",
    "build": "turbo build --filter=frontend",
    "lint": "turbo lint",
    "preview": "turbo preview --filter=frontend",
    "dev:all": "npm run dev:frontend & npm run dev:backend",
    "dev:frontend": "turbo dev --filter=frontend",
    "dev:backend": "cd backend && npm run dev",
    "build:all": "turbo build",
    "frontend:dev": "turbo dev --filter=frontend",
    "frontend:build": "turbo build --filter=frontend",
    "db:push": "cd backend && npx prisma db push",
    "db:seed": "cd backend && node prisma/seed.js",
    "db:studio": "cd backend && npx prisma studio",
    "postinstall": "cd backend && npx prisma generate"
  },
  "prisma": {
    "seed": "cd backend && node prisma/seed.js"
  },
  "dependencies": {},
  "devDependencies": {
    "turbo": "^2.5.5",
    "vercel": "^32.0.0"
  },
  "engines": {
    "node": ">=20.x"
  }
}
