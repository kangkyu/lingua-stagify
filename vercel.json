{
  "buildCommand": "npm run frontend:build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install",
  "packageManager": "npm",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
