{
  "apphosting": {
    "backendId": "lingua-stagify-backend",
    "rootDir": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "frontend/**",
      "dist/**",
      "scripts/**"
    ]
  },
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
